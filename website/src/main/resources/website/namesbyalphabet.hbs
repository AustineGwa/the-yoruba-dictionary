<!-- Header -->
{{> header }}

{{> minisearchform }}

<!-- main-content -->
<section id="content">

    <div class="container">
        {{> alphabets}}
        <br/>
        <div class="row">
            <h3>{{message "lang.number-of-names"}}: {{count}}</h3>
            <div class="alphabet-listing">
                <ul>
                {{#if names}}
                    {{#each names}}
                        <a  title="{{this.meaning}}" class="word intonation" href="/entries/{{this.word}}"><li>{{this.word}}</li></a>
                    {{/each}}
                {{/if}}
                </ul>
            </div>
        </div>
        <br/>
        {{> alphabets}}
    </div>

</section>

<!-- /main-content -->

<!-- footer -->
{{> footer }}